@model List<Ecommerce.Models.Department>

<div class="container my-4">
    <h1 class="text-center mb-4">Departments List</h1>

    <div class="row mb-4">
        <div class="col-md-2">
            <div class="list-group">
                <a href="@Url.Action("Index", "Admin")" class="list-group-item list-group-item-action">
                    Users <i class="fa-solid fa-user"></i>
                </a>
                <a href="@Url.Action("Statistics", "Admin")" class="list-group-item list-group-item-action">
                    Statistics <i class="fa-solid fa-chart-line"></i>
                </a>
                <a href="@Url.Action("Orders", "Admin")" class="list-group-item list-group-item-action">
                    Orders <i class="fa-solid fa-truck"></i>
                </a>
                <a href="@Url.Action("Index", "Item")" class="list-group-item list-group-item-action">
                    Items <i class="fa-solid fa-box"></i>
                </a>
                <a href="@Url.Action("Index", "Product")" class="list-group-item list-group-item-action">
                    Products <i class="fa-solid fa-cube"></i>
                </a>
                <a href="@Url.Action("Index", "Department")" class="list-group-item list-group-item-action active">
                    Departments <i class="fa-solid fa-tags"></i>
                </a>
                <a href="@Url.Action("Logout", "User")" class="list-group-item list-group-item-action text-danger">
                    Logout <i class="fa-solid fa-right-from-bracket"></i>
                </a>
            </div>
        </div>

        <div class="col-md-10">
            <div class="mb-3">
                <a href="@Url.Action("Create", "Department")" class="btn btn-primary">
                    <i class="fa-solid fa-plus"></i> Add New Department
                </a>
            </div>

            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead class="table-dark text-center">
                        <tr>
                            <th scope="col">Department ID</th>
                            <th scope="col">Name</th>
                            <th scope="col">Number of Products</th>
                            <th scope="col">Edit</th>
                            <th scope="col">Delete</th>
                        </tr>
                    </thead>
                    <tbody class="text-center">
                        @foreach (var department in Model)
                        {
                            <tr id="department-row-@department.Id">
                                <td>@department.Id</td>
                                <td>@department.Name</td>
                                <td>@(ViewBag.DepartmentProductCounts[department.Id]?? 0)</td>
                                <td>
                                    <a href="@Url.Action("Edit", new { id = department.Id })" class="btn btn-primary btn-sm">
                                        <i class="fa-solid fa-pencil-alt"></i> Edit
                                    </a>
                                </td>
                                <td>
                                    <button class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal-@department.Id" data-item-id="@department.Id">
                                        <i class="fa-solid fa-trash"></i> Delete
                                    </button>
                                </td>
                            </tr>

                            <!-- Delete Confirmation Modal -->
                            <div class="modal fade" id="deleteModal-@department.Id" tabindex="-1" aria-labelledby="deleteModalLabel-@department.Id" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="deleteModalLabel-@department.Id">Confirm Delete</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            Are you sure you want to delete department <strong>@department.Name</strong>?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                            <button type="button" class="btn btn-danger" onclick="deleteDepartment(this)" data-item-id="@department.Id">Delete</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function deleteDepartment(button) {
            var departmentId = $(button).data('item-id');

            $.ajax({
                url: '@Url.Action("Delete", "Department")',
                type: 'POST',
                data: { id: departmentId },
                success: function (response) {
                    if (response.success) {
                        // Remove the department row from the table
                        $('#department-row-' + departmentId).remove();
                        // Close the modal
                        $('#deleteModal-' + departmentId).modal('hide');
                    } else {
                        alert(response.message);
                    }
                },
                error: function () {
                    alert('An error occurred while trying to delete the department.');
                }
            });
        }
    </script>
}
