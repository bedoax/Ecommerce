@model IEnumerable<Ecommerce.Models.Item>

<div class="container my-4">
    <h1 class="text-center mb-4">Items List</h1>

    <div class="row mb-4">
        <div class="col-md-2">
            <div class="list-group">
                <a href="@Url.Action("Index", "Admin")" class="list-group-item list-group-item-action ">
                    Users <i class="fa-solid fa-user"></i>
                </a>
                <a href="@Url.Action("Statistics", "Admin")" class="list-group-item list-group-item-action">
                    Statistics <i class="fa-solid fa-chart-line"></i>
                </a>
                <a href="@Url.Action("Orders", "Admin")" class="list-group-item list-group-item-action">
                    Orders <i class="fa-solid fa-truck"></i>
                </a>
                <a href="@Url.Action("Index", "Item")" class="list-group-item list-group-item-action active">
                    Items <i class="fa-solid fa-box"></i>
                </a>
                <a href="@Url.Action("Index", "Product")" class="list-group-item list-group-item-action">
                    Products <i class="fa-solid fa-cube"></i>
                </a>
                <a href="@Url.Action("Index", "Department")" class="list-group-item list-group-item-action">
                    Departments <i class="fa-solid fa-tags"></i>
                </a>
                <a href="@Url.Action("Logout", "User")" class="list-group-item list-group-item-action text-danger">
                    Logout <i class="fa-solid fa-right-from-bracket"></i>
                </a>
            </div>
        </div>

        <div class="col-md-10">
            <div class="mb-3">
                <a href="@Url.Action("Create", "Item")" class="btn btn-primary">
                    <i class="fa-solid fa-plus"></i> Add New Item
                </a>
            </div>

            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead class="table-dark text-center">
                        <tr>
                            <th scope="col">Item ID</th>
                            <th scope="col">Name</th>
                            <th scope="col">Description</th>
                            <th scope="col">Price</th>
                            <th scope="col">Edit</th>
                            <th scope="col">Delete</th>
                        </tr>
                    </thead>
                    <tbody class="text-center">
                        @foreach (var item in Model)
                        {
                            <tr id="item-row-@item.Id">
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td>@item.Price</td>
                                <td>
                                    <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-primary btn-sm">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                </td>
                                <td>
                                    <button class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal-@item.Id" data-item-id="@item.Id">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </td>
                            </tr>

                            <!-- Delete Confirmation Modal -->
                            <div class="modal fade" id="deleteModal-@item.Id" tabindex="-1" aria-labelledby="deleteModalLabel-@item.Id" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="deleteModalLabel-@item.Id">Confirm Delete</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            Are you sure you want to delete item <strong>@item.Name</strong>?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                            <button type="button" class="btn btn-danger" onclick="deleteItem(this)" data-item-id="@item.Id">Delete</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    function deleteItem(button) {
        var itemId = $(button).data('item-id');

        $.ajax({
            url: '@Url.Action("Delete")',
            type: 'POST',
            data: { id: itemId },
            success: function (result) {
                if (result.success) {
                    // Remove the item row from the table
                    $('#item-row-' + itemId).remove();
                    // Close the modal
                    $('#deleteModal-' + itemId).modal('hide');
                } else {
                    alert(result.message);
                }
            },
            error: function () {
                alert('An error occurred while trying to delete the item.');
            }
        });
    }
</script>
